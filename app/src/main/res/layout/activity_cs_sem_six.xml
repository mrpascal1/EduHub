<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CsSemSix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/WSNCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="WSN &amp; Mobile Communication"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_white_1000"
                        android:layout_gravity="center"
                        android:background="@drawable/bglist"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CCCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cloud Computing"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_white_1000"
                        android:layout_gravity="center"
                        android:background="@drawable/bglist"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CFCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cyber Forensics"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_white_1000"
                        android:layout_gravity="center"
                        android:background="@drawable/bglist"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/IRCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Information Retrieval"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_white_1000"
                        android:layout_gravity="center"
                        android:background="@drawable/bglist"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/DIPCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Digital Image Processing"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_white_1000"
                        android:layout_gravity="center"
                        android:background="@drawable/bglist"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/DATASCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Data Science"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_white_1000"
                        android:layout_gravity="center"
                        android:background="@drawable/bglist"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/EHCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ethical Hacking"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_white_1000"
                        android:layout_gravity="center"
                        android:background="@drawable/bglist"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>